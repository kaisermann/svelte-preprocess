{
  "compilerOptions": {
    "noImplicitAny": true,
    "sourceMap": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "es2018",
    "outDir": "dist",
    "lib": ["es2018"]
  },
  "include": ["src/**/*.ts", "src/**/*.js"],
  "exclude": ["node_modules/**/*", "dist"]
}
